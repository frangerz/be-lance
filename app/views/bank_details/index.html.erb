<p id="notice"><%= notice %></p>

<h1>Listing Bank Details</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Service</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_details.each do |bank_detail| %>
      <tr>
        <td><%= bank_detail.type %></td>
        <td><%= bank_detail.service %></td>
        <td><%= bank_detail.description %></td>
        <td><%= link_to 'Show', bank_detail %></td>
        <td><%= link_to 'Edit', edit_bank_detail_path(bank_detail) %></td>
        <td><%= link_to 'Destroy', bank_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

