<p id="notice"><%= notice %></p>

<h1>Listing Charge Rates</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Period</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charge_rates.each do |charge_rate| %>
      <tr>
        <td><%= charge_rate.description %></td>
        <td><%= charge_rate.period %></td>
        <td><%= charge_rate.cost %></td>
        <td><%= link_to 'Show', charge_rate %></td>
        <td><%= link_to 'Edit', edit_charge_rate_path(charge_rate) %></td>
        <td><%= link_to 'Destroy', charge_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

