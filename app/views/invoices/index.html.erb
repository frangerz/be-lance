<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Total cost</th>
      <th>Payment completed at</th>
      <th>Last payment</th>
      <th>Next payment</th>
      <th>Recovered</th>
      <th>Owed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.title %></td>
        <td><%= invoice.description %></td>
        <td><%= invoice.total_cost %></td>
        <td><%= invoice.payment_completed_at %></td>
        <td><%= invoice.last_payment %></td>
        <td><%= invoice.next_payment %></td>
        <td><%= invoice.recovered %></td>
        <td><%= invoice.owed %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

