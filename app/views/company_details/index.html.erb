<h1>Listing Company Details</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Company name</th>
      <th>Abn</th>
      <th>Acn</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_details.each do |company_detail| %>
      <tr>
        <td><%= company_detail.type %></td>
        <td><%= company_detail.company_name %></td>
        <td><%= company_detail.abn %></td>
        <td><%= company_detail.acn %></td>
        <td><%= company_detail.description %></td>
        <td><%= link_to 'Show', company_detail %></td>
        <td><%= link_to 'Edit', edit_company_detail_path(company_detail) %></td>
        <td><%= link_to 'Destroy', company_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

